<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="progressBarColor">@color/orange</item>
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="textColor">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    <!-- Night application theme. -->
    <style name="NightMode" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/veryDarkBlue</item>
        <item name="progressBarColor">@color/purple</item>
        <item name="colorSecondary">@color/darkBlue</item>
        <item name="textColor">@color/white</item>
        <item name="android:statusBarColor">@color/veryDarkBlue</item>
    </style>
</resources>
