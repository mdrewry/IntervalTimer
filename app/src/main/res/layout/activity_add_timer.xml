<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".addTimer">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineUpper"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"></androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/createTimerText"
        app:layout_constraintEnd_toEndOf="@id/createTimerText"
        app:layout_constraintTop_toTopOf="@id/createTimerText"
        app:layout_constraintBottom_toBottomOf="@id/createTimerText"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"></androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSave"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/saveTimerButton"
        app:layout_constraintEnd_toEndOf="@id/saveTimerButton"
        app:layout_constraintTop_toTopOf="@id/saveTimerButton"
        app:layout_constraintBottom_toBottomOf="@id/saveTimerButton"
        app:cardBackgroundColor="?attr/colorAccent"
        app:cardElevation="8dp"
        app:cardCornerRadius="50dp"></androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEditName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/nameOfTimer"
        app:layout_constraintEnd_toEndOf="@id/editNameOfTimer"
        app:layout_constraintTop_toTopOf="@id/nameOfTimer"
        app:layout_constraintBottom_toBottomOf="@id/nameOfTimer"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="16dp"
        app:cardCornerRadius="8dp"></androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEditNumIntervals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/numOfIntervals"
        app:layout_constraintEnd_toEndOf="@id/editNumOfIntervals"
        app:layout_constraintTop_toTopOf="@id/numOfIntervals"
        app:layout_constraintBottom_toBottomOf="@id/numOfIntervals"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="16dp"
        app:cardCornerRadius="8dp"></androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEditIntervals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/timeOfIntervals"
        app:layout_constraintEnd_toEndOf="@id/editTimeOfIntervals"
        app:layout_constraintTop_toTopOf="@id/timeOfIntervals"
        app:layout_constraintBottom_toBottomOf="@id/timeOfIntervals"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="16dp"
        app:cardCornerRadius="8dp"></androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEditBreak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/timeOfBreak"
        app:layout_constraintEnd_toEndOf="@id/editTimeOfBreak"
        app:layout_constraintTop_toTopOf="@id/timeOfBreak"
        app:layout_constraintBottom_toBottomOf="@id/timeOfBreak"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="16dp"
        app:cardCornerRadius="8dp"></androidx.cardview.widget.CardView>
    //all editTexts
    <EditText
        android:id="@+id/editNameOfTimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textColor="?attr/textColor"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:ems="8"
        app:layout_constraintTop_toTopOf="@id/cardViewMain"
        app:layout_constraintStart_toEndOf="@id/nameOfTimer"
        app:layout_constraintBottom_toTopOf="@id/editNumOfIntervals"
        android:elevation="24dp"/>
    <EditText
        android:id="@+id/editNumOfIntervals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="2"
        android:inputType="number"
        android:textSize="20dp"
        android:textColor="?attr/textColor"
        app:layout_constraintTop_toBottomOf="@id/editNameOfTimer"
        app:layout_constraintStart_toEndOf="@id/numOfIntervals"
        app:layout_constraintBottom_toTopOf="@id/editTimeOfIntervals"
        android:elevation="24dp"/>
    <EditText
        android:id="@+id/editTimeOfIntervals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="2"
        android:inputType="number"
        android:textSize="20dp"
        android:textColor="?attr/textColor"
        app:layout_constraintTop_toBottomOf="@id/editNumOfIntervals"
        app:layout_constraintStart_toEndOf="@id/timeOfIntervals"
        app:layout_constraintBottom_toTopOf="@id/editTimeOfBreak"
        android:elevation="24dp"/>
    <EditText
        android:id="@+id/editTimeOfBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="2"
        android:inputType="number"
        android:textSize="20dp"
        android:textColor="?attr/textColor"
        app:layout_constraintTop_toBottomOf="@id/editTimeOfIntervals"
        app:layout_constraintStart_toEndOf="@id/timeOfBreak"
        app:layout_constraintBottom_toBottomOf="@id/cardViewMain"
        android:elevation="24dp"/>
    //all supporting textViews
    <TextView
        android:id="@+id/createTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Create Timer"
        android:textSize="32dp"
        android:textColor="?attr/textColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardViewMain"
        android:padding="8dp"
        android:elevation="24dp"/>
    <TextView
        android:id="@+id/nameOfTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Name of Timer: "
        android:textSize="20dp"
        android:textColor="?attr/textColor"
        android:layout_marginStart="8dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toTopOf="@id/cardViewMain"
        app:layout_constraintStart_toStartOf="@id/cardViewMain"
        app:layout_constraintBottom_toTopOf="@id/numOfIntervals"
        android:elevation="24dp"/>
    <TextView
        android:id="@+id/numOfIntervals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Number of Intervals: "
        android:textSize="20dp"
        android:textColor="?attr/textColor"
        android:layout_marginStart="8dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/nameOfTimer"
        app:layout_constraintStart_toStartOf="@id/cardViewMain"
        app:layout_constraintBottom_toTopOf="@id/timeOfIntervals"
        android:elevation="24dp"/>
    <TextView
        android:id="@+id/timeOfIntervals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Length of Intervals(Seconds): "
        android:textSize="20dp"
        android:textColor="?attr/textColor"
        android:layout_marginStart="8dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/numOfIntervals"
        app:layout_constraintStart_toStartOf="@id/cardViewMain"
        app:layout_constraintBottom_toTopOf="@id/timeOfBreak"
        android:elevation="24dp"/>
    <TextView
        android:id="@+id/timeOfBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Length of Break(Seconds): "
        android:textSize="20dp"
        android:textColor="?attr/textColor"
        android:layout_marginStart="8dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/timeOfIntervals"
        app:layout_constraintStart_toStartOf="@id/cardViewMain"
        app:layout_constraintBottom_toBottomOf="@id/cardViewMain"
        android:elevation="24dp"/>
    //saveButton
    <ImageButton
        android:id="@+id/saveTimerButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/savebutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineBottom"
        android:elevation="8dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUpper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".2" />

</androidx.constraintlayout.widget.ConstraintLayout>